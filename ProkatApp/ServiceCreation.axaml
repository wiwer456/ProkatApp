<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="ProkatApp.ServiceCreation"
        Title="ServiceCreation">
    <Grid ShowGridLines="True" Background="white" RowDefinitions="*, *, *, *, *, *, *" ColumnDefinitions="*,2*, 2*,*">
       <Button
            Name="ServicesBackBtn"
            Click="ServicesBackBtn_Click"
            Content="Назад"
            Background="#498C51"/>
        <Border 
            Background="#76e383" 
            Grid.Column="1" 
            Grid.Row="1" 
            Grid.RowSpan="5"
            Grid.ColumnSpan="2"/> 
       <TextBlock  
            Grid.Row="1" 
            Grid.Column="1" 
            FontWeight="SemiBold"
            Grid.ColumnSpan="2"
            FontSize="25"
            HorizontalAlignment="Center" 
            VerticalAlignment="Center" 
            FontFamily="Comic Sans MS" 
            Text="Добавление услуги"/>
        <TextBox
            Name="serviceTittle"
            Watermark="Название услуги"
            Grid.Column="1"
            Grid.Row="2"
            Grid.ColumnSpan="2"
            Margin="10"/>
        <TextBox
            Name="serviceCode"
            Watermark="Код услуги"
            Grid.Column="1"
            Grid.Row="3"
            Grid.ColumnSpan="2"
            Margin="10"/>
        <TextBox
            Name="serviceCost"
            Watermark="Цена услуги за час"
            Grid.Column="1"
            Grid.Row="4"
            Grid.ColumnSpan="2"
            Margin="10"/>
        <Button
            Name="addService"
            Click="addService_Click"
            Grid.Column="1"
            Grid.Row="5"
            Content="Добавить"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            Grid.ColumnSpan="2"
            Margin="100,10"/>
  </Grid>
</Window>
